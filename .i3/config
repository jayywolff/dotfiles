exec_always --no-startup-id  python3 ~/.i3/i3-autoname-workspaces.py
exec --no-startup-id compton -b
exec --no-startup-id redshift

#Font for window titles.
font pango:FuraMonoForPowerline Nerd Font Regular 13
#Colors
set $back               #383C4A
